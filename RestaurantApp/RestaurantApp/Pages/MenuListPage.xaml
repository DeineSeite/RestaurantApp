<?xml version="1.0" encoding="UTF-8" ?>
<pages:BasePage
    x:Class="RestaurantApp.Pages.MenuListPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pageModels="clr-namespace:RestaurantApp.Core.PageModels;assembly=RestaurantApp.Core"
    xmlns:pages="clr-namespace:RestaurantApp.Pages;assembly=RestaurantApp"
    xmlns:userControls="clr-namespace:RestaurantApp.UserControls;assembly=RestaurantApp"
    x:Name="SubMenuPage">
    <pages:BasePage.Content>
        <AbsoluteLayout>
            <Image
                AbsoluteLayout.LayoutBounds="1,1,1,1"
                AbsoluteLayout.LayoutFlags="All"
                Aspect="AspectFill"
                Source="{StaticResource MainBackgroundImage}" />
            <StackLayout AbsoluteLayout.LayoutBounds="1,1,1,1" AbsoluteLayout.LayoutFlags="All">
                <userControls:HeaderTemplate />
                <StackLayout AbsoluteLayout.LayoutBounds="1,.8,1,.7" AbsoluteLayout.LayoutFlags="All">
                    <userControls:MenuTemplate />
                </StackLayout>
            </StackLayout>
        </AbsoluteLayout>
    </pages:BasePage.Content>
</pages:BasePage>